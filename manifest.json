{
  "manifest_version": 2,

  "name": "Summarize This",
  "description": "Scrape and summarize content from web pages.",
  "version": "1.0",

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./images/search.png",
      "48": "./images/search.png",
      "128": "./images/search.png"
    }
  },
  "permissions": ["tabs", "activeTab"]
}
